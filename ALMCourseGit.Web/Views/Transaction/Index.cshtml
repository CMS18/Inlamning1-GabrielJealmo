@model ALMCourseGit.Web.ViewModels.TransactionViewModel

<div class="container-fluid">
    <div class="text-center">
        <p>@TempData["Status"]</p>
    </div>
    <div class="row">
        <form class="col" asp-controller="Transaction" asp-action="Withdraw">
            <div class="row">
                <div class="input-group">
                    <label>
                        Account ID
                        <input asp-for="WithdrawModel.Id" type="number" name="id" />
                    </label>
                </div>
            </div>
            <div class="row">
                <div class="input-group">
                    <label>
                        Amount
                        <input asp-for="WithdrawModel.Amount" type="number" name="amount" />
                    </label>
                </div>
            </div>
            
            <button type="submit">Withdraw</button>
        </form>
        <form class="col" asp-controller="Transaction" asp-action="Deposit">
            <div class="row">
                <div class="input-group">
                    <label>
                        Account ID
                        <input asp-for="DepositModel.Id" type="number" name="id" />
                    </label>
                </div>
            </div>
            <div class="row">
                <div class="input-group">
                    <label>
                        Amount
                        <input asp-for="DepositModel.Amount" type="number" name="amount" />
                    </label>
                </div>
            </div>
            <button type="submit">Deposit</button>
        </form>
    </div>
</div>